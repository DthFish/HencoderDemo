<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dthfish.hencoderdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_to_dash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DashView" />

        <Button
            android:id="@+id/btn_to_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PieChart" />

        <Button
            android:id="@+id/btn_to_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SportView" />

        <Button
            android:id="@+id/btn_to_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AvatarView" />

        <Button
            android:id="@+id/btn_to_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ParagraphView" />

        <Button
            android:id="@+id/btn_to_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CameraView" />

        <Button
            android:id="@+id/btn_to_box2d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Box2DDemo" />

        <Button
            android:id="@+id/btn_to_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MaterialEditText" />

        <Button
            android:id="@+id/btn_to_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom" />
    </LinearLayout>

</ScrollView>
